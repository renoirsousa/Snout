<nav></nav>
<section class='ui middle aligned center aligned grid'> 
  <div class='column column_'>
    <div class='standart'>
        <%= image_tag "headdog.png", size: "400x140" %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui large form" }) do |f| %>
      <section class='ui container segment'>
        <br>
        <%= image_tag "snoutlogo.png", size: "400x145" %>
        <div class="field">
          <br />
          <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <br />
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Log in", class:'ui green fluid button' %>
        </div>
    <% end %>
      <div>
        <%#= render "devise/shared/links" %>
         <%= link_to "Sign up", new_registration_path(resource_name), class: 'ui teal button' %>
      </div>
    </section>
  </div>
</section>
